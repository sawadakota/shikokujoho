#tf-header
  .container
    / container
    %h1.col-xs-6.col-sm-6.col-md-6.col-lg-6 #{@tag}
    .col-xs-6.col-sm-6.col-md-6.col-lg-6.header-heart
      %h3 #{@sum}
      = image_tag("icom_heart_red.svg")
      %h3 お気に入り
  / end container
/
  Works Section
  \================================================
#tf-works
  .container
    .section-header
      %h2
        %span.pinklight
          %strong 可愛い
        はみんなを
        %span.highlight
          %strong HAPPY
        にする
      %h5
        %em Cute make everyone happy

    .text-center
      %ul.list-inline.cat
        / Portfolio Filter Categories
        %li
          = link_to "ALL", article_models_path
        %li
          = link_to "愛媛(#{@ehime_models.count})", article_tag_path("愛媛県")
        %li
          = link_to "高知(#{@kochi_models.count})", article_tag_path("高知県")
        %li
          = link_to "香川(#{@kagawa_models.count})", article_tag_path("香川県")
        %li
          = link_to "徳島(#{@tokushima_models.count})", article_tag_path("徳島県")
      / End Portfolio Filter Categories
    / End Container
  .container
    #itemsWorkThree.row.text-center
      = render partial: 'article/models/model', collection: @models
